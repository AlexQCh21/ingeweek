<com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Thumbnail o imagen superior -->


        <!-- Contenido de la card -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtname"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Ingeniería de Sistemas e Informática"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgCategoria"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_soccer"
                    android:layout_marginHorizontal="10dp"
                    app:tint="@color/colorUnsColor" />

                <TextView
                    android:id="@+id/txtCategoria"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Deporte"

                    android:textSize="18sp"
                    android:textColor="#444444"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginHorizontal="10dp"
                    app:tint="@color/colorUnsColor" />

                <TextView
                    android:id="@+id/txtFecha"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="2025-06-06"
                    android:textSize="18sp"
                    android:textColor="#444444"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_time"
                    android:layout_marginHorizontal="10dp"
                    app:tint="@color/colorUnsColor" />

                <TextView
                    android:id="@+id/txtHora"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="09:00"
                    android:textSize="18sp"
                    android:textColor="#444444"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPonente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_ponente"
                    android:layout_marginHorizontal="10dp"
                    app:tint="@color/colorUnsColor" />

                <TextView
                    android:id="@+id/txtPonente"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Dr."
                    android:textSize="18sp"
                    android:textColor="#444444"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>






        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>