<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Thumbnail o imagen superior -->
        <ImageView
            android:id="@+id/imgProfesion"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/f_sistemas"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="#FFE0E0" /> <!-- Color de ejemplo -->

        <!-- Contenido de la card -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nombrePrefesion"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Ingeniería de Sistemas e Informática"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/campusProfesion"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Campus 1"
                android:textSize="18sp"
                android:textColor="#444444"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/directorProfesion"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Director: Dr. Juan Pablo Sánchez Chávez"
                android:textSize="15sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp"/>

            <!-- Botones de acción -->

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

